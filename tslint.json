{
    "extends": [
        "tslint:latest"
    ],
    "linterOptions": {
        "exclude": [
            "src/lib/**"
        ]
    },
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "prefer-conditional-expression": false,
        "no-implicit-dependencies": false,
        "no-submodule-imports": false,
        "no-empty": false,
        "radix": false,
        "no-console": false,
        "no-this-assignment": false,
        "only-arrow-functions": false,
        "variable-name": [
            true,
            "check-format",
            "allow-snake-case"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "always",
                "asyncArrow": "always"
            }
        ],
        "max-classes-per-file": false,
        "class-name": false,
        "array-type": [
            true,
            "generic"
        ]
    }
}
