{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "module": "none",
        "moduleResolution": "node",
        "target": "es6",
        "rootDir": "./src",
        "jsx": "react",
        "plugins": [
            { "name": "typescript-tslint-plugin" }
        ]
    },
    "typeRoots": [
        "node_modules/@types"
      ],
    "include": [
        "./src/**/*.ts"
    ]
}